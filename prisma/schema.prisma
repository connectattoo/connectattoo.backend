generator client {
  provider = "prisma-client-js"
  binaryTargets = "native"
}

datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model TattooClient {
  id               Int      @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String   @unique
  password         String
  birthDate        String
  termsAccepted    Boolean  @default(false)
  isEmailConfirmed Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model TattooArtist {
  id               Int                  @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String               @unique
  password         String
  birthDate        String
  termsAccepted    Boolean              @default(false)
  isEmailConfirmed Boolean              @default(false)
  address          TattooArtistAddress?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
}

model TattooArtistAddress {
  id             Int          @id @default(autoincrement())
  street         String
  number         String
  city           String
  state          String
  country        String       @default("Brazil")
  zipCode        String
  tattooArtistId Int          @unique
  tattooArtist   TattooArtist @relation(fields: [tattooArtistId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}
