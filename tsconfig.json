{
  "compilerOptions": {
    
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noErrorTruncation": false,
    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"]
    },
    
  },
  "include": ["src/**/*", "*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
